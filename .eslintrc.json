{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["plugin:react/recommended", "airbnb", "airbnb/hooks"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "react/no-array-index-key": "off",
    "react-hooks/exhaustive-deps": "off",
    "react/jsx-filename-extension": "off"
  },
  "ignorePatterns": [
    "src/index.js",
    "src/reportWebVitals.js",
    "src/setupTests.js",
    "src/RangeFunction.js", // since I did not write it. Got it from: https://stackoverflow.com/questions/8273047/javascript-function-similar-to-python-range
    "public/tableSorter/sort-table.js",
    "public/tableSorter/sort-table.min.js",
    "src/App-HW9.js",
    "src/App.test.js",
    "src/ListItem.js",
    // "src/App.js",
    // "src/Board.js",
    // "src/Square.js",
    "src/tableSorter/sort-table.js"
  ]
}
